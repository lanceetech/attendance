
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    // A user is an admin if their user document has the role 'admin'.
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    match /units/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /classes/{classId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /classes/{classId}/attendance/{attendanceId} {
      allow read: if isSignedIn();
      // Allow lecturers or students to create their own attendance record
      allow create: if isSignedIn();
      allow write: if isAdmin();
    }

    match /classrooms/{roomId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      // Students and lecturers can submit feedback
      allow create: if isSignedIn();
      allow write: if isAdmin();
    }

    match /studentTimetable/{entryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /lecturerTimetable/{entryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
