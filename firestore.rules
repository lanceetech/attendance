/**
 * @fileoverview Firestore Security Rules for ClassSync.
 *
 * Core Philosophy:
 * This ruleset prioritizes strict user ownership for user profiles and open access for other data in the application,
 * but with authorization checks on write operations. This allows for easy prototyping and testing.
 *
 * Data Structure:
 * - /users/{userId}: Stores public user profiles, where {userId} matches the Firebase Auth UID.
 * - /units/{unitId}: Stores information about course units.
 * - /classes/{classId}: Stores information about scheduled classes.
 * - /classes/{classId}/attendance/{attendanceId}: Stores attendance records for each class.
 * - /classrooms/{roomId}: Stores information about classrooms.
 * - /feedback/{feedbackId}: Stores user feedback.
 * - /studentTimetable/{entryId}: Stores denormalized timetable data for all students for quick lookups.
 * - /lecturerTimetable/{entryId}: Stores denormalized timetable data for lecturers for quick lookups.
 *
 * Key Security Decisions:
 * - User profiles (/users/{userId}) are only readable and writable by the owner.
 * - Listing of users is disallowed for privacy.
 * - All other collections allow public read access for ease of development.
 * - Write operations on all collections require authentication.
 *
 * Denormalization for Authorization:
 *  - Attendance records will include the student's UID to quickly verify attendance.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) - If the user is creating their own profile (auth UID matches userId).
     * @allow (get, update, delete) - If the user is the owner of the profile (auth UID matches userId) and the document exists.
     * @deny (list) - Listing users is not permitted.
     * @deny (create) - If the user is trying to create a profile for another user.
     * @deny (update, delete) - If the user is not the owner of the profile or the document does not exist.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to course unit data.
     * @path /units/{unitId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete units.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /units/{unitId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to scheduled class session data.
     * @path /classes/{classId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete classes.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /classes/{classId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to attendance records for a specific class.
     * @path /classes/{classId}/attendance/{attendanceId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete attendance records.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /classes/{classId}/attendance/{attendanceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to classroom data.
     * @path /classrooms/{roomId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete classrooms.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /classrooms/{roomId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to feedback submissions.
     * @path /feedback/{feedbackId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete feedback.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /feedback/{feedbackId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to student timetable data.
     * @path /studentTimetable/{entryId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete entries.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /studentTimetable/{entryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to lecturer timetable data.
     * @path /lecturerTimetable/{entryId}
     * @allow (get, list) - Public read access.
     * @allow (create, update, delete) - Only authenticated users can create, update, or delete entries.
     * @deny (create, update, delete) - If the user is not authenticated.
     * @principle Allows public read access but requires authentication for writes.
     */
    match /lecturerTimetable/{entryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }
  }
}