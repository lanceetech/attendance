
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Checks if the requesting user's document in Firestore has the 'admin' role.
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // An admin can read any user profile. A user can read their own profile.
      allow get: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      // Only an admin can list all users.
      allow list: if isAdmin();
      
      // A user can create their own profile. An admin can also create users.
      allow create: if (isSignedIn() && request.auth.uid == userId) || isAdmin();

      // An admin can update any user. A user can update their own profile.
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      // Only an admin can delete users. A user can delete their own profile.
      allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

      match /settings/preferences {
        // A user can read and write to their own settings document.
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /units/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /classes/{classId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /classes/{classId}/attendance/{attendanceId} {
      allow read: if isSignedIn();
      // Allow lecturers or students to create their own attendance record
      allow create: if isSignedIn();
      allow write: if isAdmin();
    }

    match /classrooms/{roomId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      // Students and lecturers can submit feedback
      allow create: if isSignedIn();
      allow write: if isAdmin();
    }

    match /studentTimetable/{entryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /lecturerTimetable/{entryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
