rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' can create a profile with data { uid: 'user123', name: 'Test User', role: 'student', email: 'test@example.com' }.
     * @allow (update) - User with UID 'user123' can update their profile with data { uid: 'user123', name: 'Updated User' }.
     * @deny (create) - User with UID 'user456' cannot create a profile for 'user123'.
     * @deny (update) - User with UID 'user456' cannot update the profile of 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update: if isOwner(userId) && request.resource.data.uid == request.auth.uid;
      allow delete: if isOwner(userId) && request.resource.data.uid == request.auth.uid;
    }

    /**
     * @description Allows anyone to read unit information, but restricts write access.
     * @path /units/{unitId}
     * @allow (get) - Any user can read a unit document.
     * @allow (list) - Any user can list unit documents.
     * @deny (create) - No one can create unit documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /units/{unitId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read class information, but restricts write access.
     * @path /classes/{classId}
     * @allow (get) - Any user can read a class document.
     * @allow (list) - Any user can list class documents.
     * @deny (create) - No one can create class documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /classes/{classId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows read and write attendance to a specific student.
     * @path /classes/{classId}/attendance/{attendanceId}
     * @allow (get) - Any user can read an attendance document.
     * @allow (list) - Any user can list attendance documents.
     * @deny (create) - No one can create attendance documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /classes/{classId}/attendance/{attendanceId} {
        allow get, list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows anyone to read classroom information, but restricts write access.
     * @path /classrooms/{roomId}
     * @allow (get) - Any user can read a classroom document.
     * @allow (list) - Any user can list classroom documents.
     * @deny (create) - No one can create classroom documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /classrooms/{roomId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows authenticated users to submit feedback.
     * @path /feedback/{feedbackId}
     * @allow (create) - Authenticated user can create feedback.
     * @deny (get) - No one can read feedback documents without custom logic.
     * @deny (list) - No one can list feedback documents without custom logic.
     * @principle Authenticated users can create feedback, but read access is restricted.
     */
    match /feedback/{feedbackId} {
      allow get, list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read student timetable information, but restricts write access.
     * @path /studentTimetable/{entryId}
     * @allow (get) - Any user can read a student timetable document.
     * @allow (list) - Any user can list student timetable documents.
     * @deny (create) - No one can create student timetable documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /studentTimetable/{entryId} {
        allow get, list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows anyone to read lecturer timetable information, but restricts write access.
     * @path /lecturerTimetable/{entryId}
     * @allow (get) - Any user can read a lecturer timetable document.
     * @allow (list) - Any user can list lecturer timetable documents.
     * @deny (create) - No one can create lecturer timetable documents without custom logic.
     * @principle Public read access with restricted writes.
     */
    match /lecturerTimetable/{entryId} {
        allow get, list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}